@model ISD.Areas.Admin.Models.SampleModels

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm("Edit", "SampleModels", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="form-horizontal">
            <h4>Edit Drawing</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ModelId)

            <div class="form-group">
                <label>Name</label>
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.HiddenFor(i => i.LargeImageUrl)
                <img src="@Model.LargeImageUrl" height="100" width="100" />
                <input type="file" name="LargeImage" id="LargeImage" />
            </div>

            <div class="form-group">
                <label>Enable</label>
                <div class="checkbox">
                    @Html.EditorFor(model => model.IsEnabled)
                    @Html.ValidationMessageFor(model => model.IsEnabled, "", new { @class = "text-danger" })
                </div>
            </div>



            <div class="form-groupss">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>

    </div>
    <div class="col-md-3"></div>


}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
