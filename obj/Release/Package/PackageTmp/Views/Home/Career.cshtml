@model ISD.Models.Carrier
@{
   
}


<style>
    .field-validation-error {
        color: #dc3545;
    }
    .dropdown-content.select-dropdown{height:auto;}
</style>
<!--Section: Contact v.3-->
<section class="section mb-5 pt-5 mt-5">

    <!--Grid row-->
    <div class="row">

        <!--Grid column-->
        <div class="col-md-12">

            <!--Form with header-->
            <div class="card">
                <div class="row">

                    <div class="col-lg-8">
                        <div class="card-body form">
                            <!--Header-->
                            <div class="formHeader mb-1 pt-3">
                                <h3>
                                    <i class="fa fa-envelope"></i> Job Application Form
                                </h3>
                            </div>

                            <br>
                            @*@Html.Raw(@Model.pagesData == null ? "" : Model.pagesData.PageContent)*@
                            @using (Html.BeginForm("AddCarrier", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {


                                <!--Grid row-->
                                <div class="row">
                                    <strong></strong>
                                    <!--Grid column-->
                                    <div class="col-md-6">
                                        <div class="md-form">
                                            @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @placeholder = "Enter Name" })
                                            @Html.ValidationMessageFor(model => model.Name)
                                        </div>
                                    </div>
                                    <!--Grid column-->
                                    <!--Grid column-->
                                    <div class="col-md-6">

                                        <div class="md-form">
                                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Enter Email" })
                                            @Html.ValidationMessageFor(model => model.Email)


                                        </div>

                                    </div>
                                    <!--Grid column-->
                                    <!--Grid column-->
                                    <div class="col-md-6">
                                        <div class="md-form">
                                            @Html.TextBoxFor(model => model.ContactNo, new { @class = "form-control", @placeholder = "Enter Phone Number" })
                                            @Html.ValidationMessageFor(model => model.ContactNo)
                                        </div>
                                    </div>
                                    <!--Grid column-->
                                    <!--Grid column-->
                                    <div class="col-md-6">
                                        <div class="md-form">

                                            @Html.TextBoxFor(model => model.DateOfBirth, new { @class = "form-control", @placeholder = "Select Date of Birth" ,@type="date"})
                                            @Html.ValidationMessageFor(model => model.DateOfBirth)

                                        </div>
                                    </div>
                                     <!--Grid column-->
                                     <div class="col-md-6">

                                        <div class="md-form">

                                            @Html.DropDownListFor(i => i.Experience, new List<SelectListItem> {

                       new SelectListItem{ Text="--Select Experience --", Value = "" },
                        new SelectListItem{ Text="Fresher", Value = "Fresher" },
                        new SelectListItem{ Text="6 months - 2 years", Value = "6 months - 2 years" },
                        new SelectListItem{ Text="2-5 years", Value = "2-5 years" },
                        new SelectListItem{ Text="5-10 years", Value = "5-10 years" },
                        new SelectListItem{ Text="10-15 years", Value = "10-15 years" },
                        new SelectListItem{ Text=">15 years", Value = ">15 years" }
              }, new { @class = "mdb-select colorful-select dropdown-primary" })

                                        </div>
                                    </div>
                                     <!--Grid column-->

                                      <div class="col-md-6">

                                                <div class="md-form">
                                                    @Html.ListBoxFor(i => i.Education, new List<SelectListItem> {

                        new SelectListItem{ Text="--Select Education --", Value = "" },
                        new SelectListItem{ Text="BA/BCOM/BSC", Value = "BA/BCOM/BSC" },
                        new SelectListItem{ Text="MA/MCOM/MSC", Value = "MA/MCOM/MSC" },
                        new SelectListItem{ Text="BE/BTECH", Value = "BE/BTECH" },
                        new SelectListItem{ Text="ME/MTECH", Value = "ME/MTECH" },
                        new SelectListItem{ Text="OTHER", Value = "OTHER" },
                        }, new { @class = "mdb-select" })
                                                    @Html.ValidationMessageFor(model => model.Education)


                                                </div>

                                            </div>
                                            <!--Grid column-->
                                    <div class="col-md-12">

                                        <div class="file-field">
                                            <div class="btn btn-primary btn-sm float-left">
                                                <span>Choose file</span>
                                                <input type="file" name="resume" id="resume">
                                            </div>
                                            <div class="file-path-wrapper">
                                                <input class="file-path validate" type="text" placeholder="Upload your file">
                                            </div>
                                        </div>
                                    </div>
                                       
                                    <div class="text-right">
                                        <div class="  mt-4 mb-2">
                                            <button class="btn btn-outline-blue">
                                                Send
                                                <i class="fa fa-send ml-2"></i>
                                            </button>
                                        </div>
                                    </div>
                                    

                                        </div>
                                        }

                                    </div>
                                </div>

                    <div class="col-lg-4">
                        <div class="card-body contact text-center">
                            <div class="container">
                                <div class="mb-5">
                                    <h3>Contact information</h3>
                                </div>
                                @*@Html.Raw(@Model.pagesData == null ? "" : Model.pagesData.PageContent)*@

                              

                                <hr class="hr-light mb-4 mt-4">

                                <ul class="inline-ul text-center list-unstyled">
                                    <li><a class="icons-sm tw-ic"><i class="fa fa-twitter"></i></a></li>
                                    <li><a class="icons-sm li-ic"><i class="fa fa-linkedin"> </i></a></li>
                                    <li><a class="icons-sm ins-ic"><i class="fa fa-instagram"> </i></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--/Form with header-->

        </div>
        <!--Grid column-->

    </div>
    <!--Grid row-->

</section>
<!--Section: Contact v.3-->
@section Scripts
{

    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>    
    <script src="~/Content/MDB/js/materialize.min.js"></script>
    <script>
        $(function () {            
            $('#DateOfBirth').pickadate({
                today: '',
                clear: 'Clear',
                close: 'Close',
                closeOnSelect: true,
                selectMonths: true,
                selectYears: true,
                selectYears: 50,               
                max: true
            });
            $('.mdb-select').material_select();
            
            if ("@ViewBag.status") {
                alert("@ViewBag.status");

            }
        });

    </script>
}